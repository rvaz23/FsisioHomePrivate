<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_exercises_categories"
        android:name="pt.fct.ipm2.ui.exercises.ExercisesCategoriesFragment"
        android:label="@string/menu_categorias"
        tools:layout="@layout/fragment_exercisescategories" >
        <action
            android:id="@+id/action_nav_exercisescategories_to_nav_exercises"
            app:destination="@id/nav_exercises" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="pt.fct.ipm2.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_exercises"
            app:destination="@id/nav_exercises" />
        <action
            android:id="@+id/action_nav_home_to_nav_trainings"
            app:destination="@id/nav_trainings" />
        <action
            android:id="@+id/action_nav_home_to_nav_exercises_categories"
            app:destination="@id/nav_exercises_categories" />
        <action
            android:id="@+id/action_nav_home_to_trainingExercisesFragment"
            app:destination="@id/trainingExercisesFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_mytrainings"
        android:name="pt.fct.ipm2.ui.mytrainings.MyTrainingsFragment"
        android:label="@string/menu_myTrainings"
        tools:layout="@layout/fragment_mytrainings" >
        <action
            android:id="@+id/action_nav_mytrainings_to_trainingExercisesFragment"
            app:destination="@id/trainingExercisesFragment" />
        <action
            android:id="@+id/action_nav_mytrainings_to_afterCreateTrainingFragment"
            app:destination="@id/afterCreateTrainingFragment" />
        <action
            android:id="@+id/action_nav_mytrainings_self"
            app:destination="@id/nav_mytrainings"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_trainings"
        android:name="pt.fct.ipm2.ui.trainings.TrainingsFragment"
        android:label="@string/menu_trainings"
        tools:layout="@layout/fragment_trainings" >
        <action
            android:id="@+id/action_nav_trainings_to_trainingExercisesFragment"
            app:destination="@id/trainingExercisesFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_exercises"
        android:name="pt.fct.ipm2.ui.exercises.ExercisesFragment"
        tools:layout="@layout/fragment_exercises"
    >
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_exercises_to_showExerciseFragment"
            app:destination="@id/showExerciseFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainingExercisesFragment"
        android:name="pt.fct.ipm2.ui.trainings.TrainingExercisesFragment"
        android:label="fragment_training_exercises"
        tools:layout="@layout/fragment_training_exercises" >
        <argument
            android:name="training"
            app:argType="pt.fct.ipm2.ui.trainings.Trainings" />
        <action
            android:id="@+id/action_trainingExercisesFragment_to_showExerciseFragment"
            app:destination="@id/showExerciseFragment" />
        <action
            android:id="@+id/action_trainingExercisesFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/showExerciseFragment"
        android:name="pt.fct.ipm2.ui.home.ShowExerciseFragment"
        android:label="ShowExerciseFragment" >
        <argument
            android:name="exercise"
            app:argType="pt.fct.ipm2.ExercisesRecyclerView.Exercises" />
    </fragment>
    <fragment
        android:id="@+id/nav_favorites"
        android:name="pt.fct.ipm2.ui.favorites.FavoritesFragment"
        android:label="FavoritesFragment" >
        <action
            android:id="@+id/action_nav_favorites_to_showExerciseFragment"
            app:destination="@id/showExerciseFragment" />
    </fragment>
    <fragment
        android:id="@+id/afterCreateTrainingFragment"
        android:name="pt.fct.ipm2.ui.mytrainings.AfterCreateTrainingFragment"
        android:label="fragment_aftercreatetraining"
        tools:layout="@layout/fragment_aftercreatetraining" >
        <argument
            android:name="mytraining"
            app:argType="pt.fct.ipm2.ui.trainings.Trainings" />
        <action
            android:id="@+id/action_afterCreateTrainingFragment_to_searchCategoriesFragment"
            app:destination="@id/searchCategoriesFragment" />
        <action
            android:id="@+id/action_afterCreateTrainingFragment_to_nav_mytrainings"
            app:destination="@id/nav_mytrainings" />
    </fragment>
    <fragment
        android:id="@+id/searchCategoriesFragment"
        android:name="pt.fct.ipm2.ui.mytrainings.SearchCategoriesFragment"
        android:label="fragment_search_categories"
        tools:layout="@layout/fragment_search_categories" >
        <argument
            android:name="mytraining"
            app:argType="pt.fct.ipm2.ui.trainings.Trainings" />
        <action
            android:id="@+id/action_searchCategoriesFragment_to_afterCreateTrainingFragment"
            app:destination="@id/afterCreateTrainingFragment" />
        <action
            android:id="@+id/action_searchCategoriesFragment_to_addExercisesTrainingFragment"
            app:destination="@id/addExercisesTrainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/addExercisesTrainingFragment"
        android:name="pt.fct.ipm2.ui.mytrainings.AddExercisesTrainingFragment"
        android:label="fragment_add_exercises_training"
        tools:layout="@layout/fragment_add_exercises_training" >
        <argument
            android:name="mytraining"
            app:argType="pt.fct.ipm2.ui.trainings.Trainings" />
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_addExercisesTrainingFragment_to_searchCategoriesFragment"
            app:destination="@id/searchCategoriesFragment" />

    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="pt.fct.ipm2.ui.home.PlaylistFragment"
        android:label="PlaylistFragment" >
        <argument
            android:name="playlist"
            app:argType="pt.fct.ipm2.ui.trainings.Trainings" />
        <action
            android:id="@+id/action_playlistFragment_self"
            app:destination="@id/playlistFragment" />
        <action
            android:id="@+id/action_playlistFragment_to_trainingExercisesFragment"
            app:destination="@id/trainingExercisesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/trainingExercisesFragment"
            app:popUpToInclusive="true"/>
    </fragment>


</navigation>